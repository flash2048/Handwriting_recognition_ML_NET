@{
    ViewData["Title"] = "Recognition of handwritten numbers";
}

<div align="center">
    <br /><br />
    <canvas id="myCanvas" width="256" height="256" style="border:2px solid black"></canvas>
    <br /><br />
    <h1 id="prediction">*</h1>
    <button id="clearArea" class="btn btn-lg btn-danger">Clear Area</button>
    <button id="send" class="btn btn-lg btn-success">Send</button>
</div>

<script type="text/javascript">
    var mousePressed = false;
    var lastX, lastY;
    var ctx;

    function InitThis() {
        ctx = document.getElementById('myCanvas').getContext("2d");

        $('#myCanvas').mousedown(function (e) {
            mousePressed = true;
            Draw(e.pageX - $(this).offset().left, e.pageY - $(this).offset().top, false);
        });

        $('#myCanvas').mousemove(function (e) {
            if (mousePressed) {
                Draw(e.pageX - $(this).offset().left, e.pageY - $(this).offset().top, true);
            }
        });

        $('#myCanvas').mouseup(function (e) {
            mousePressed = false;
        });
        $('#myCanvas').mouseleave(function (e) {
            mousePressed = false;
        });

        $("#clearArea").click(function () {
            clearArea();
        });

        $("#send").click(function () {
            send();
        });
    }

    function Draw(x, y, isDown) {
        if (isDown) {
            ctx.beginPath();
            ctx.strokeStyle = "red";
            ctx.lineWidth = "40";
            ctx.lineJoin = "round";
            ctx.moveTo(lastX, lastY);
            ctx.lineTo(x, y);
            ctx.closePath();
            ctx.stroke();
        }
        lastX = x; lastY = y;
    }

    function clearArea() {
        ctx.setTransform(1, 0, 0, 1, 0, 0);
        ctx.clearRect(0, 0, ctx.canvas.width, ctx.canvas.height);
        $("#prediction").text("*");
    }

    function send() {
        var canvas = document.getElementById('myCanvas');
        $("#prediction").text("*");
        $.ajax({
            type: "POST",
            url: '@Url.Action("Upload","Home")',
            data: {
                imgBase64: canvas.toDataURL()
            }
        }).done(function (msg) {
            console.log(msg.dataset);
            $("#prediction").text(msg.prediction);
        });
    }

    InitThis();
</script>